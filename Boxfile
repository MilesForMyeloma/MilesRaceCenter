web1:
  name: laravel4
  document_root: public
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/logs
    - app/storage/meta
    - app/storage/sessions
    - app/storage/views
  php_extensions:
    - mcrypt
  zend_extensions:
    - xcache
    - xdebug
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi;"
    - "php composer.phar --prefer-source install"